<div class="container">
  <h2>Editing task <%= @task.title %></h2>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.check_box :completed %>
      <%= f.label :completed %>
    </div>

    <%= f.submit class: 'mb-3' %>
  <% end %>
</div>
