<div class="container">
  <h1>My tasks</h1>
  <ul class="list-group ">
    <% @tasks.each do |task| %>
      <li class="d-flex justify-content-between mb-2 list-group-item">
        <%= link_to task do %>
          <% if task.completed %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <span class="ml-2 mr-2 flex-grow-1"><%= task.title %></span>
        <% end %>
        <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class='fas fa-trash-alt'></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to '+ Add a new task', new_task_path %>
</div>

