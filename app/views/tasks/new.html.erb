
<div class="form container mt-3">
  <h2>Add a task</h2>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <%= f.submit class: 'mb-3' %>
  <% end %>
  <%= link_to 'Go back to see all your tasks', tasks_path %>

</div>

