<div class="container">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <% if @task.completed === true %>
        <input type="checkbox" aria-label="Checkbox for following text input" checked class="mr-2">
        <span>This task is completed</span>
        <% else %>
        <input type="checkbox" aria-label="Checkbox for following text input" class="mr-2">
        <span>This task is not yet completed</span>
      <% end %>
  <div class="back-home mt-3">
    <%= link_to 'Go back to see all your tasks', tasks_path %>
  </div>
</div>
